---
import Layout from "../layouts/Layout.astro";
import { Github, Mail, Linkedin } from "lucide-astro";
---

<Layout title="Contact - Shortitfast">
    <div
        class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-lime-50 py-20 px-6"
    >
        <div
            class="max-w-4xl mx-auto bg-white/80 backdrop-blur-lg rounded-3xl p-8 md:p-12 shadow-xl"
        >
            <h1 class="text-4xl font-bold text-gray-900 mb-6">Get in Touch</h1>
            <p class="text-gray-600 mb-12">
                Have questions or feedback about Shortitfast? I'd love to hear
                from you!
            </p>

            <div class="grid md:grid-cols-2 gap-8">
                <!-- Contact Info -->
                <div class="space-y-6">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-4">
                        Contact Information
                    </h2>

                    <div class="space-y-4">
                        <a
                            href="https://github.com/Crisiszzz07"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-3 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors group"
                        >
                            <div
                                class="w-10 h-10 bg-brand-purple/10 rounded-full flex items-center justify-center group-hover:bg-brand-purple/20 transition-colors"
                            >
                                <Github class="w-5 h-5 text-brand-purple" />
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900">
                                    GitHub
                                </p>
                                <p class="text-sm text-gray-600">
                                    @Crisiszzz07
                                </p>
                            </div>
                        </a>

                        <div
                            class="flex items-center gap-3 p-4 bg-gray-50 rounded-xl"
                        >
                            <div
                                class="w-10 h-10 bg-brand-purple/10 rounded-full flex items-center justify-center"
                            >
                                <Mail class="w-5 h-5 text-brand-purple" />
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900">Email</p>
                                <p class="text-sm text-gray-600">
                                    Available on GitHub profile
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- About the Project -->
                <div class="space-y-6">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-4">
                        About This Project
                    </h2>
                    <div class="prose prose-sm text-gray-700">
                        <p>
                            Shortitfast is a portfolio project showcasing modern
                            web development practices with:
                        </p>
                        <ul class="space-y-2 mt-4">
                            <li>TypeScript & Astro frontend</li>
                            <li>Express.js backend</li>
                            <li>PostgreSQL database</li>
                            <li>Modern UI with Tailwind CSS</li>
                        </ul>
                        <p class="mt-4">
                            Feel free to explore the code, report issues, or
                            suggest improvements on GitHub!
                        </p>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="mt-12 pt-8 border-t border-gray-200">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">
                    Quick Links
                </h3>
                <div class="flex flex-wrap gap-4">
                    <a
                        href="/docs"
                        class="px-6 py-3 bg-brand-purple/10 text-brand-purple rounded-xl font-semibold hover:bg-brand-purple/20 transition-colors"
                    >
                        API Documentation
                    </a>
                    <a
                        href="/privacy"
                        class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-semibold hover:bg-gray-200 transition-colors"
                    >
                        Privacy Policy
                    </a>
                    <a
                        href="/terms"
                        class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-semibold hover:bg-gray-200 transition-colors"
                    >
                        Terms of Service
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>
